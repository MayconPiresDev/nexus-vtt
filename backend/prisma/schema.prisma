generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  PLAYER
  MASTER
  BOTH
}

enum ExperienceLevel {
  NOVATO
  MEDIANO
  VETERANO
  ANCIAO
}

enum CampaignStatus {
  OPEN
  IN_PROGRESS
  FINISHED
}

enum ApplicationStatus {
  PENDING
  APPROVED
  REJECTED
}

model User {
  id              String          @id @default(uuid())
  name            String
  email           String          @unique
  passwordHash    String
  role            Role            @default(PLAYER)
  experienceLevel ExperienceLevel @default(NOVATO)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  characters   Character[]
  campaigns    Campaign[]            @relation("MasterCampaigns")
  applications CampaignApplication[]

  @@index([email])
}

model Character {
  id        String @id @default(uuid())
  name      String
  race      String
  charClass String
  level     Int    @default(1)

  strength     Int
  dexterity    Int
  constitution Int
  intelligence Int
  wisdom       Int
  charisma     Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  applications CampaignApplication[]

  @@index([userId])
}

model Campaign {
  id          String          @id @default(uuid())
  title       String
  description String          @db.Text
  status      CampaignStatus  @default(OPEN)
  minimumExp  ExperienceLevel @default(NOVATO)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  masterId String
  master   User   @relation("MasterCampaigns", fields: [masterId], references: [id], onDelete: Cascade)

  applications CampaignApplication[]

  @@index([status])
  @@index([masterId])
}

model CampaignApplication {
  id     String            @id @default(uuid())
  status ApplicationStatus @default(PENDING)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  campaignId String
  campaign   Campaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)

  playerId String
  player   User   @relation(fields: [playerId], references: [id], onDelete: Cascade)

  characterId String
  character   Character @relation(fields: [characterId], references: [id], onDelete: Cascade)

  @@unique([campaignId, playerId])
  @@index([campaignId])
  @@index([playerId])
}
